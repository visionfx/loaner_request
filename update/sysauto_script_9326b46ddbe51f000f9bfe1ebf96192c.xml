        <script><![CDATA[var gr = new GlideRecord('x_152596_loaner_re_loaner_request');
var pickUpLeadTime = gs.getProperty('x_152596_loaner_re.pickup.leadtime',24)*60*60*1000;

var noticeTime = new GlideDateTime();
noticeTime.add(pickUpLeadTime);

gr.addQuery('state',16);
gr.addQuery('pickup_u_reminder','');
gr.addQuery('start_date','<==',noticeTime);
gr.query();

var rightNow = new GlideDateTime();

gs.info(gr.getRowCount());

while (gr.next()){
	gr.pick_up_reminder = rightNow;
	gr.update();
	gs.eventQueue('x_152596_loaner_re.pickUP',gr,gr.number,gs.getUserName());
}


]]></script>
